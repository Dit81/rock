<!DOCTYPE html>
<html>
<head>
  <title>Rock - admin zone</title>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% if user_signed_in? %>
     <p><%= link_to "Sign out, #{current_user.username}",
            destroy_user_session_path(:admin_zone=>true) %></p>
  <% end %>
  <p><%= link_to "Main panel", admin_root_path %></p>
  <p><%= link_to "Back to site", root_path %></p>
  <%= yield %>
</body>
</html>