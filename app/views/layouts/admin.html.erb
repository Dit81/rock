<!DOCTYPE html>
<html>
<head>
  <title>Rock - <%= t.admin.admin_zone %></title>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <p><%= link_to t.admin["Back to site"], root_path %></p>
  <% if user_signed_in? %>
    <p><%= link_to t.devise.sign_out(current_user.username),
           destroy_user_session_path(:admin_zone=>true) %></p>
    <p>
      <%= link_to t.admin["Main panel"], admin_root_path %>
      <%= link_to t.admin["Manage static pages"], admin_static_pages_path %>
      <%= link_to t.admin["Manage categories"], admin_page_categories_path %>
      <%= link_to t.admin["Register siders"], admin_sider_types_path %>
      <%= link_to t.admin["Manage siders"], admin_siders_path %>
    </p>
  <% end %>
  <%= yield %>
</body>
</html>